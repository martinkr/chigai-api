# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root=true

[*]
end_of_line=lf
charset=utf-8
trim_trailing_whitespace=true
insert_final_newline=true


# Tabs in CSS, LESS, SASS,HTML
[*.js]
indent_style=tab
[*.html]
indent_style=tab
[*.css]
indent_style=tab
[*.scss]
indent_style=tab
[*.sass]
indent_style=tab
[*.less]
indent_style=tab

# Spaces in JSON
[*.json]
indent_style=space
#
[*.*rc]
indent_style=space
#

[*.md]
insert_final_newline=false
